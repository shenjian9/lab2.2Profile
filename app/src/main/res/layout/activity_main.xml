<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lab22profile.MainActivity">

    <ImageView
        android:id="@+id/imageViewWeb"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:onClick="visitBAIT2073"
        android:contentDescription="@string/web"
        app:srcCompat="@drawable/ic_web_black_24px"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded,VectorDrawableCompat"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <ImageView
        android:id="@+id/imageViewPhone"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:onClick="showDial"
        android:contentDescription="@string/phone"
        app:srcCompat="@drawable/ic_phone_iphone_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewWeb"
        android:layout_marginLeft="8dp"
        tools:ignore="MissingConstraints,RtlHardcoded,VectorDrawableCompat"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <ImageView
        android:id="@+id/imageViewMail"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:contentDescription="@string/mail"
        android:onClick="showSendTo"
        app:srcCompat="@drawable/ic_mail_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewPhone"
        android:layout_marginLeft="8dp"
        tools:ignore="MissingConstraints,RtlHardcoded,VectorDrawableCompat"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="showMain"
        android:contentDescription="@string/home"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMail"
        app:srcCompat="@drawable/ic_home_black_24dp"
        tools:ignore="MissingConstraints,RtlHardcoded,VectorDrawableCompat"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="updatesProfile"
        android:text="@string/update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/user"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textViewNAme"
        android:layout_width="365dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:text="@string/name"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="363dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="@string/email"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNAme"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
